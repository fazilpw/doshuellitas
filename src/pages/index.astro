---
// src/pages/index.astro

// Importación del layout
import Layout from '../layouts/Layout.astro';

// Importación de componentes
import Navbar from '../components/Navbar.jsx';
import Hero from '../components/Hero.jsx';
import Services from '../components/Services.jsx';
import Facilities from '../components/Facilities';
import Testimonials from '../components/Testimonials.jsx';
import FAQ from '../components/FAQ.jsx';
import Contact from '../components/Contact.jsx';
import Footer from '../components/Footer.jsx';

// Importación de datos para SEO
import { FAQ_SCHEMA } from '../utils/seo';

// Metadatos SEO para esta página específica
const pageTitle = "Club Canino Dos Huellitas | Guardería y Colegio Canino en Bogotá";
const pageDescription = "Guardería, colegio y hotel canino con servicio de ruta puerta a puerta. Más de 8.000m² de áreas libres de corrales para la recreación, socialización y formación de tu mascota en Bogotá.";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
>
  <!-- Datos estructurados específicos para la página de inicio: FAQ schema -->
  <script type="application/ld+json" set:html={JSON.stringify(FAQ_SCHEMA)} slot="head" />
  
  <Navbar client:load />
  
  <section id="hero">
    <Hero client:load />
  </section>
  
  <section id="servicios">
    <Services client:load />
  </section>
  
  <section id="instalaciones">
    <Facilities client:load />
  </section>
  
  <section id="testimonios">
    <Testimonials client:load />
  </section>
  
  <section id="preguntas-frecuentes">
    <FAQ client:load />
  </section>
  
  <section id="contacto">
    <Contact client:load />
  </section>
  
  <Footer />
</Layout>