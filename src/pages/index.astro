---
// src/pages/index.astro - SOLUCIÓN FINAL SIN ERRORES DE TYPESCRIPT
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.jsx';
import Hero from '../components/Hero.jsx';
import Services from '../components/Services.jsx';
import Facilities from '../components/Facilities.jsx';
import SimpleCarousel from '../components/SimpleCarousel.jsx';
import AppPromotion from '../components/AppPromotion.jsx';
import Testimonials from '../components/Testimonials.jsx';
import FAQ from '../components/FAQ.jsx';
import Contact from '../components/Contact.jsx';
import Footer from '../components/Footer.jsx';

const pageTitle = "Club Canino Dos Huellitas | Guardería y Colegio Canino en Bogotá";
const pageDescription = "Guardería, colegio y hotel canino con servicio de ruta puerta a puerta. Ahora con aplicación móvil exclusiva para nuestras familias.";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
>
  <Navbar client:load />
  
  <!-- PÁGINA WEB INFORMATIVA -->
  <section id="hero">
    <Hero client:load />
  </section>
  
  <section id="servicios">
    <Services client:load />
  </section>
  
  <section id="instalaciones">
    <Facilities client:load />
  </section>

  <!-- NUEVA SECCIÓN: GALERÍA DE FOTOS - SIN PROBLEMAS DE TIPOS -->
  <section id="galeria">
    <SimpleCarousel client:load />
    
      
  </section>
  
  <!-- SECCIÓN: PROMOCIÓN DE LA APLICACIÓN -->
  <section id="aplicacion">
    <AppPromotion client:load />
  </section>
  
  <section id="testimonios">
    <Testimonials client:load />
  </section>
  
  <section id="preguntas-frecuentes">
    <FAQ client:load />
  </section>
  
  <section id="contacto">
    <Contact client:load />
  </section>
  
  <Footer />
</Layout>