---
// src/pages/dashboard/conductor.astro
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Panel del Conductor - Club Canino">
  <div class="min-h-screen bg-[#FFFBF0]">
    
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-[#2C3E50]">🚐 Control de Ruta</h1>
          <p class="text-[#5B9BD5] mt-1">Panel del conductor</p>
        </div>
        <div class="flex items-center space-x-4">
          <div id="connection-status" class="flex items-center text-sm">
            <div class="w-2 h-2 bg-gray-400 rounded-full mr-2"></div>
            <span class="text-gray-600">Desconectado</span>
          </div>
          <div class="text-sm text-gray-500" id="current-date">
            {new Date().toLocaleDateString()}
          </div>
        </div>
      </div>
    </header>

    <!-- Contenido Principal -->
    <main class="px-6 py-6">
      <div class="max-w-4xl mx-auto space-y-6">
        
        <!-- Configuración del Vehículo -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-[#2C3E50] mb-4">🚗 Configuración del Vehículo</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Vehículo Asignado
              </label>
              <select 
                id="vehicle-select" 
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#56CCF2] focus:border-transparent"
              >
                <option value="">Seleccionar vehículo...</option>
                <option value="abc-123">ABC-123 - Juan Carlos</option>
                <option value="def-456">DEF-456 - María López</option>
                <option value="ghi-789">GHI-789 - Pedro Gómez</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Tipo de Ruta
              </label>
              <select 
                id="route-type" 
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#56CCF2] focus:border-transparent"
              >
                <option value="">Seleccionar tipo...</option>
                <option value="pickup">🏠➡️🏫 Recoger (Casa → Colegio)</option>
                <option value="delivery">🏫➡️🏠 Entregar (Colegio → Casa)</option>
              </select>
            </div>
          </div>
          
          <div class="mt-6">
            <button 
              id="load-dogs"
              class="bg-[#56CCF2] text-white px-6 py-3 rounded-lg hover:bg-[#5B9BD5] transition-colors disabled:opacity-50"
              disabled
            >
              📋 Cargar Lista de Perros
            </button>
            <p class="text-xs text-gray-500 mt-2">
              Selecciona vehículo y tipo de ruta primero
            </p>
          </div>
        </div>

        <!-- Lista de Perros -->
        <div id="dogs-section" class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hidden">
          <h2 class="text-lg font-semibold text-[#2C3E50] mb-4">🐕 Perros Asignados</h2>
          
          <div id="dogs-container" class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <!-- Los perros se cargarán dinámicamente aquí -->
          </div>
          
          <div id="selected-dogs" class="hidden bg-[#ACF0F4] bg-opacity-30 rounded-lg p-4">
            <div class="flex items-center justify-between mb-3">
              <h3 class="font-medium text-[#2C3E50]">
                🎯 Perros Seleccionados (<span id="selected-count">0</span>)
              </h3>
              <button 
                onclick="clearAllSelections()" 
                class="text-xs text-red-600 hover:text-red-800"
              >
                Limpiar todo
              </button>
            </div>
            <div id="selected-list" class="space-y-2">
              <!-- Lista de perros seleccionados -->
            </div>
          </div>
        </div>

        <!-- Control de GPS -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-[#2C3E50] mb-4">📍 Control GPS</h2>
          
          <div id="tracking-status" class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-3">
              <div class="w-4 h-4 bg-gray-400 rounded-full" id="status-indicator"></div>
              <span class="text-gray-600" id="status-text">GPS Inactivo</span>
            </div>
            <div class="text-sm text-gray-500">
              <span id="last-update-time">Sin actualizaciones</span>
            </div>
          </div>
          
          <div id="error-container" class="hidden mb-4">
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex items-center">
                <div class="text-red-600 mr-3">⚠️</div>
                <p id="error-message" class="text-red-700 text-sm"></p>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <button 
                id="toggle-tracking"
                class="w-full bg-[#56CCF2] text-white py-3 px-4 rounded-lg font-medium hover:bg-[#5B9BD5] transition-colors disabled:opacity-50"
                disabled
              >
                ▶️ Iniciar Tracking GPS
              </button>
              
              <p class="text-xs text-gray-500 mt-2 text-center" id="tracking-help">
                Selecciona perros antes de iniciar el tracking
              </p>
            </div>
            
            <div id="location-info" class="hidden">
              <div class="bg-[#ACF0F4] bg-opacity-30 rounded-lg p-4">
                <div class="text-sm space-y-2">
                  <div class="flex justify-between">
                    <span class="font-medium">Latitud:</span>
                    <span id="lat-display" class="font-mono">-</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="font-medium">Longitud:</span>
                    <span id="lng-display" class="font-mono">-</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="font-medium">Velocidad:</span>
                    <span id="speed-display" class="font-mono">0 km/h</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="font-medium">Precisión:</span>
                    <span id="accuracy-display" class="font-mono">- m</span>
                  </div>
                </div>
              </div>
              
              <p id="last-update" class="text-xs text-gray-600 text-center mt-2">
                Última actualización: <span id="update-time">-</span>
              </p>
            </div>
          </div>
        </div>

        <!-- Acciones de Ruta -->
        <div id="route-actions" class="hidden bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-[#2C3E50] mb-4">🛣️ Acciones de Ruta</h2>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <button 
              onclick="handleRouteAction('start')"
              class="bg-green-500 text-white py-3 px-4 rounded-lg hover:bg-green-600 transition-colors"
            >
              🚀 Iniciar Ruta
            </button>
            
            <button 
              onclick="handleRouteAction('pause')"
              class="bg-yellow-500 text-white py-3 px-4 rounded-lg hover:bg-yellow-600 transition-colors"
            >
              ⏸️ Pausar
            </button>
            
            <button 
              onclick="handleRouteAction('pickup')"
              class="bg-blue-500 text-white py-3 px-4 rounded-lg hover:bg-blue-600 transition-colors"
            >
              🐕 Perro Recogido
            </button>
            
            <button 
              onclick="handleRouteAction('emergency')"
              class="bg-red-500 text-white py-3 px-4 rounded-lg hover:bg-red-600 transition-colors"
            >
              🚨 Emergencia
            </button>
          </div>
        </div>

        <!-- Historial de Eventos -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-[#2C3E50] mb-4">📝 Historial de Eventos</h2>
          
          <div id="event-history" class="space-y-3 max-h-64 overflow-y-auto">
            <div class="text-center text-gray-500 py-4">
              <div class="text-2xl mb-2">📋</div>
              <p>No hay eventos registrados aún</p>
            </div>
          </div>
        </div>

      </div>
    </main>
  </div>

  <!-- Usar archivo JavaScript externo para evitar errores de TypeScript -->
  <script src="/js/conductor.js" is:inline></script>
</Layout>